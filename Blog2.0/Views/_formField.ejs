<div class="form-group">
    <label for = "title">Title</label>
    <input required type="text" value = "<%= article.title %>" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for = "description">Description</label>
    <textarea required type="text" name="metaData" id="description" class="form-control">
        <%= article.metaData %>
    </textarea>
</div>

<div class="form-group">
    <label for = "markdown">MarkDown</label>
    <textarea required type="text" name="markdown" id="markdown" class="form-control">
        <%= article.MarkDown %>
    </textarea>
</div>
<a href="/" class="btn btn-secondary">Abort</a>
<button class="btn btn-success">Save</button>